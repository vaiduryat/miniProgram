.goods_list .first_tab {
  margin-top: 10rpx;
}
.goods_list .first_tab .goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.goods_list .first_tab .goods_item .goods_img_wrap {
  flex: 2;
}
.goods_list .first_tab .goods_item .goods_img_wrap image {
  width: 75%;
  vertical-align: conter;
}
.goods_list .first_tab .goods_item .goods_info_wrap {
  padding: 20rpx 0;
  font-size: 30rpx;
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_list .first_tab .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_list .first_tab .goods_item .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 36rpx;
}
